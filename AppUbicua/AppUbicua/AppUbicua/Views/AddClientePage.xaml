<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AppUbicua.Views.AddClientePage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Add Cliente">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Text="Id"
                        TextColor="Black"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="0"
                        Placeholder="Id de Compra"
                        x:Name="EntId">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="1"
                        Text="Nombre"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="1"
                        Placeholder="Del Cliente"
                        x:Name="EntName">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="2"
                        Text="Nit"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="2"
                        Placeholder="Introduzca su Nit"
                        Keyboard="Numeric"
                        x:Name="EntNit">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="3"
                        Text="Correo"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="3"
                        Placeholder="Descripcion de Compra"
                        x:Name="EntCorreo">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="4"
                        Text="Celular"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="4"
                        Keyboard="Numeric"
                        Placeholder="Introdusca su celular"
                        x:Name="EntCel">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="5"
                        Text="Fecha"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="5"
                        Placeholder="Introdusca fecha de compra"
                        x:Name="EntFecha">
                    </Entry>
                    <Label
                        Grid.Column="0"
                        Grid.Row="6"
                        Text="Ubicacion"
                        VerticalOptions="Center">
                    </Label>
                    <Entry
                        Grid.Column="1"
                        Grid.Row="6"
                        Placeholder="Ubicacion"
                        x:Name="EntUbic">
                    </Entry>
                </Grid>
                <ActivityIndicator
                    IsRunning="{Binding IsRunning}"
                    VerticalOptions="CenterAndExpand">

                </ActivityIndicator>
                <Button
                    BackgroundColor="Navy"
                    BorderRadius="23" 
                    HeightRequest="46"
                    Text="Guardar"
                    TextColor="White"
                    x:Name="BtnSave">

                </Button>
                <Button
                    BackgroundColor="Red"
                    BorderRadius="23" 
                    HeightRequest="46"
                    Text="Eliminar"
                    TextColor="White"
                    x:Name="BtnDelete">
                </Button>
                <Button
                    BackgroundColor="Green"
                    BorderRadius="23" 
                    HeightRequest="46"
                    Text="Modificar"
                    TextColor="White"
                    x:Name="BtnUpdate">
                </Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>